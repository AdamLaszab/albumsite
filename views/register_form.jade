extends layout

block content

  h1 #{title}

  form(method='POST')
    div
      label(for='name') name:
        input(type='text', name='name',required)
      label(for='password') password:     
        input(type='password',name='password',required)
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
