extends layout

block content

  h1 #{title}

  form(method='POST')
    div
      label(for='name') name:
      input(type='text', name='name',required)
      lable(for='artist') Artist: 
      select(name="artist")
        for artist in artists 
          option(value=artist._id)  #{artist.name} 
      lable(for='genre') Genre: 
      select(name="genre")
        for genre in genres 
          option(value=genre._id)  #{genre.name}     
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
